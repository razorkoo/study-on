{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>{{ course.titleCourse }}</h1>
    {{ course.descriptionCourse }}
    <br>
    <h1>Уроки</h1>
    <ol>
        {% for lesson in lessons %}
        <li>
            <a href="/lessons/{{ lesson.id }}">{{ lesson.titleLesson }}</a>
        </li>
        {% endfor %}
    </ol>


    <hr>
    <div>
        <a href="{{ path('course_index') }}" class="btn btn-secondary">К списку курсов</a>

        <a href="{{ path('course_edit', {'id': course.id}) }}" class="btn btn-secondary">Редактировать курс</a>
        <a href="/lessons/new/?course_id={{ course.id }}" class="btn btn-secondary ">Добавить урок</a>
        {{ include('course/_delete_form.html.twig') }}

    </div>

{% endblock %}
